<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--无背景全屏透明-->
    <style name="AppTheme_bg_no" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:launchMode">singleTop</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Camera_Album_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/c_001208</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--选择相机或相册的dialog-->
    <style name="PictureCaptureDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--dialog動畫-->
    <style name="dialog_animstyle">
        <item name="android:windowEnterAnimation">@anim/fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/fade_out_to_bottom</item>
    </style>
    <!--退出时弹窗中的Cancel 和Drop 按钮-->
    <style name="exit_dialog_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>